---
interface Props {
  title: string;
  description: string;
  image: string;
  href: string;
}

const { title, description, image, href } = Astro.props;
---

<a href={href} class="group block bg-black overflow-hidden w-full sm:w-[calc(50%-0.5rem)] lg:w-[calc(33.333%-0.7rem)]">
  <div
    class="aspect-[3/1] bg-cover bg-center transition-transform duration-300 group-hover:scale-105"
    style={`background-image: url(${image})`}
  ></div>
  <div class="p-4">
    <h3 class="text-white font-bold text-lg" set:html={title} />
    <p class="text-gray-400 text-sm mt-1 line-clamp-2">{description}</p>
  </div>
</a>
