---
import Base from './Base.astro';
import Nav from '../components/ui/Nav.astro';
import Footer from '../components/ui/Footer.astro';

interface Props {
  title?: string;
  description?: string;
}

const { title, description } = Astro.props;
---

<Base title={title} description={description}>
  <Nav />
  <main>
    <slot />
  </main>
  <Footer />
</Base>
