---
import Page from '../../../layouts/Page.astro';
import ProjectCard from '../../../components/ui/ProjectCard.astro';
import { t } from '../../../i18n/utils';
import { getPostsByLocale, stripLocalePrefix } from '../../../lib/posts';

const lang = 'ja';
const posts = await getPostsByLocale(lang);
---

<Page title={t(lang, 'blog.title')} lang={lang}>
  <div class="pt-24 pb-16 max-w-6xl mx-auto px-4">
    <h1 class="text-4xl font-bold text-gray-900 dark:text-white mb-8">{t(lang, 'blog.title')}</h1>
    <div class="flex flex-wrap justify-center gap-4">
      {posts.map((post) => (
        <ProjectCard
          title={post.data.title}
          description={post.data.description}
          image={post.data.image || ''}
          imagePosition={post.data.imagePosition}
          href={`/ja/blog/${stripLocalePrefix(post.slug)}/`}
        />
      ))}
    </div>
  </div>
</Page>