---
import Post from '../../../layouts/Post.astro';
import { getPostsByLocale, stripLocalePrefix } from '../../../lib/posts';

export async function getStaticPaths() {
  const posts = await getPostsByLocale('ja');
  return posts.map((post) => ({
    params: { slug: stripLocalePrefix(post.slug) },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();
---

<Post
  title={post.data.title}
  date={post.data.date}
  description={post.data.description}
  tags={post.data.tags}
  lang="ja"
>
  <Content />
</Post>